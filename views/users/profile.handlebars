<h2> User Stats</h2>
<br/>
<h3> Threads </h3>
<table class="table table-bordered">
  <thead>
    <tr class="info">      
      <th>
        Tweet description
      </th>
      <th>
        Tweet date
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each tweets}}
      <tr class="warning">
        <td>
          {{this.description}}
        </td> 
        <td>
          {{this.date}}
        </td>
      </tr>
    {{else}}
      <h3>No tweets available!</h3>
    {{/each}}
  </tbody>
</table>
<br/><br/><br/>
<h3> Likes and Dislikes </h3>
<table class="table table-bordered">
  <thead>
    <tr class="info">
      <th>
        Likes count
      </th>
      <th>
        Dislikes count
      </th>
    </tr>
  </thead>
    <tbody>
      <tr class="warning">
        <td>
          {{tweets.likes}}
        </td>
        <td>
          {{tweets.dislikes}}
        </td>
      </tr>
    </tbody>
</table>
